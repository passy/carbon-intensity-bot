{
  "name": "functions",
  "scripts": {
    "build": "tslint -p tslint.json && webpack",
    "serve": "npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase experimental:functions:shell",
    "start": "npm run shell",
    "test": "npm run build && jest",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google/maps": "^0.4.5",
    "actions-on-google": "^1.8.0",
    "firebase-admin": "~5.8.0",
    "firebase-functions": "^0.8.0",
    "fork-ts-checker-webpack-plugin": "^0.3.0",
    "supertest": "^3.0.0",
    "xhr2": "^0.1.4"
  },
  "devDependencies": {
    "@types/actions-on-google": "^1.7.0",
    "@types/jest": "^22.1.0",
    "jest": "^22.1.4",
    "purescript": "^0.11.7",
    "purescript-psa": "^0.6.0",
    "purs-loader": "^3.1.2",
    "ts-jest": "^22.0.0",
    "ts-loader": "^3.2.0",
    "tslint": "^5.8.0",
    "typescript": "^2.5.3",
    "webpack": "^3.10.0",
    "webpack-node-externals": "^1.6.0"
  },
  "private": true,
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
