{
  "name": "functions",
  "scripts": {
    "build": "pulp build && webpack --config ./webpack.config.js && tsc && tslint -p tsconfig.json",
    "build:generate-types": "pulp run -m GenerateTypes",
    "serve": "npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase experimental:functions:shell",
    "start": "npm run shell",
    "test": "npm run build && jest",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google/maps": "^0.5.5",
    "actions-on-google": "^2.6.0",
    "firebase-functions": "^2.1.0",
    "xhr2": "^0.1.4"
  },
  "devDependencies": {
    "@types/google__maps": "^0.5.0",
    "@types/jest": "^24.0.3",
    "@types/nock": "^9.3.0",
    "firebase-admin": "^7.0.0",
    "firebase-functions-test": "^0.1.6",
    "firebase-tools": "^6.3.1",
    "jest": "^24.1.0",
    "nock": "^10.0.6",
    "prettier": "^1.15.3",
    "pulp": "^12.3.1",
    "purescript": "0.12.5",
    "purescript-psa": "^0.7.3",
    "purs-loader": "^3.2.0",
    "ts-jest": "^24.0.0",
    "ts-loader": "5.3.3",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.5",
    "webpack": "^4.28.0",
    "webpack-cli": "^3.2.0",
    "webpack-node-externals": "^1.7.2"
  },
  "private": true,
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testURL": "http://localhost/",
    "testRegex": "(/__tests__/.*(\\.)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
